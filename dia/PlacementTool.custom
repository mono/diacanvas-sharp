[DllImport("diacanvas2")]
extern static IntPtr dia_placement_tool_new (uint object_type, 
					     string image, IntPtr pixbuf, 
					     IntPtr dummy);
public static PlacementTool Image (string filename)
{
	Gdk.Pixbuf pixbuf = new Gdk.Pixbuf (filename);

	return new PlacementTool (dia_placement_tool_new (CanvasImage.GType,
							  "image", pixbuf.Handle,
							  IntPtr.Zero));
}
